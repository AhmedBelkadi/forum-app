<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.forum.QuestionController">

    <children>

        <Label alignment="CENTER" prefHeight="81.0" prefWidth="582.0" text="Liste des Questions">
             <font>
                <Font size="38.0" />
             </font>
        </Label>

<!--         ScrollPane for scrolling if necessary-->
        <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="670.0" prefWidth="1000" style="-fx-alignment: center">
            <!-- VBox to contain question cards -->
            <VBox fx:id="questionsContainer" alignment="CENTER" spacing="20.0" >

                <!-- Card 1 -->
                <HBox style="-fx-background-color: #f8d7da; -fx-padding: 10; -fx-spacing: 10; -fx-border-radius: 5; -fx-border-color: #dc3545;">
                    <VBox>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Question 1" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Date de création: 01/01/2022" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Créateur: John Doe (john.doe@example.com)" />
                        <Button style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5 10;" text="Répondre" />
                    </VBox>
                </HBox>

                <!-- Card 2 -->
                <HBox style="-fx-background-color: #d4edda; -fx-padding: 10; -fx-spacing: 10; -fx-border-radius: 5; -fx-border-color: #28a745;">
                    <VBox>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Question 2" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Date de création: 02/01/2022" />
                        <Label style="-fx-font-size: 12px; -fx-text-fill: #6c757d;" text="Créateur: Jane Doe (jane.doe@example.com)" />
                        <Button style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5 10;" text="Répondre" />
                    </VBox>
                </HBox>
            <padding>
               <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            </VBox>
        </ScrollPane>



    </children>
</VBox>
